# Application
APP_NAME=Urban Traffic Congestion API
APP_ENV=development
DEBUG=True
API_VERSION=v1
SECRET_KEY=your-super-secret-key-change-in-production

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/traffic_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# ML Models
MODEL_PATH=./models/
XGBOOST_MODEL_PATH=./models/xgboost_traffic_model.json
LSTM_MODEL_PATH=./models/lstm_traffic_model.h5
PREDICTION_BATCH_SIZE=100

# Featherless.ai
FEATHERLESS_API_KEY=your-featherless-api-key
FEATHERLESS_API_URL=https://api.featherless.ai/v1

# Firebase Cloud Messaging
FIREBASE_CREDENTIALS_PATH=./config/firebase-credentials.json
FIREBASE_PROJECT_ID=your-project-id

# Twilio (SMS & WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@trafficpwa.com
EMAIL_FROM_NAME=Traffic Alert System

# SMTP (Alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-password
SMTP_TLS=True

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# mParivahan Integration (Future)
MPARIVAHAN_API_URL=https://api.mparivahan.gov.in
MPARIVAHAN_API_KEY=your-api-key-here

# Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
